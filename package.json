{
  "name": "create-npm-lib",
  "version": "1.0.1",
  "description": "Utility for scaffold the basis of an npm lib",
  "repository": "https://github.com/RolandoHidalgo/create-npm-lib",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "index.js"
  ],
  "scripts": {
    "dev": "SET NODE_ENV=development& ts-node src/index.ts",
    "test": "SET NODE_ENV=test& jest",
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "lint": "eslint --cache --ext .ts,.js,.mjs,.cjs . && prettier -c src test",
    "lint:fix": "eslint --cache --ext .ts,.js,.mjs,.cjs . --fix && prettier -c src test -w",
    "prepack": "pnpm run build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@poppinss/cliui": "^3.0.5",
    "@types/jest": "^29.5.3",
    "@types/mustache": "^4.2.2",
    "@types/node": "^20.4.2",
    "@types/tmp": "^0.2.3",
    "changelogen": "^0.5.5",
    "cross-env": "^7.0.3",
    "dir-compare": "^4.0.0",
    "eslint-config-unjs": "^0.2.1",
    "jest": "^29.6.2",
    "mustache": "^4.2.0",
    "npm-name": "^7.1.0",
    "npm-taken": "^0.2.0",
    "prettier": "^3.0.2",
    "prompts": "^2.4.2",
    "recursive-copy": "^2.0.14",
    "tmp": "^0.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "with-local-tmp-dir": "^5.0.1"
  },
  "packageManager": "pnpm",
  "dependencies": {
    "@jest/types": "^29.6.3",
    "consola": "^3.2.3"
  }
}